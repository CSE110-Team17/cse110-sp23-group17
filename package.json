{
    "devDependencies": {
      "@babel/core": "^7.22.1",
      "@babel/preset-env": "^7.22.4",
      "babel-jest": "^29.5.0",
      "eslint": "^8.41.0",
      "eslint-config-prettier": "^8.8.0",
      "jest": "^29.5.0",
      "jest-puppeteer": "^9.0.0",
      "prettier": "^2.8.8",
      "puppeteer": "^20.5.0"
    },
    "scripts": {
      "format": "prettier --no-config -w .",
      "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
      "test": "jest"
    },
    "jest": {
      "preset": "jest-puppeteer",
      "verbose": true
    },
    "jest-puppeteer": {
        "launch": {
            "headless": false,
            "slowMo": 25
        },
        "testEnvironment": "jsdom",
        "preset": "ts-jest",
        "transform": {
        "^.+\\.(ts|tsx)?$": "ts-jest",
        "^.+\\.(js|jsx)$": "babel-jest"
        }
    }
  }